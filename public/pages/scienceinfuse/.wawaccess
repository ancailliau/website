wawaccess do
  
  # We don't inherits static configuration
  inherits true
  
  # By default, we deny the call
  strategy :deny_all
  
  match 'layout.wtpl' do
    deny
  end

  match 'menu.wtpl' do
    deny
  end
  
  # We match .wtpl files using wlang
  match file(:extension => '.wtpl') do
    file = $1 if /([a-z-]+\.wtpl)$/ =~ served_file
    wlang '../../templates/layout.wtpl', {:title    => AcmScW.title_of(served_file), 
                                          "served_file" => 'pages/scienceinfuse/layout.wtpl',
                                          :which_scienceinfuse => file,
                                          :theclass => "other"}
  end

end