<fieldset>
	<legend>Mes informations de connexion (obligatoire)</legend>
	
	<p class="span-4">
		<label for="mail">Mon adresse e-mail&nbsp;:</label>
		<input type="text" name="mail" value="{people[:mail]}" id="account_fields_mail"/>
		<span id="change_mail_explain" class="explain">Changer votre adresse e-mail vous obligera a réactiver
			votre compte (un mail vous sera envoyé)</span>
	</p>

	<p class="span-2">
		<label for="password">Mon mot de passe <br />(entre 8 et 15 caractères)</label>
		<input type="password" name="password" value="{people[:password]}"/>
	</p>
	
	<p class="span-2-last">
		<label for="password_confirm">Mon mot de passe <br />(confirmation)</label>
		<input type="password" name="password_confirm" value="{people[:password]}"/>
	</p>
	
	<p class="span-4-checkbox">
		<input type="checkbox" name="newsletter" value="true" ?{people[:newsletter]}{checked="checked"}/>
		<label for="newsletter">Je souhaite m'abonner à la newsletter (au maximum un e-mail par mois)</label>
	</p>
</fieldset>

<fieldset>
	<legend>A propos de moi (facultatif)</legend>
	
	<p class="span-2">
		<label for="first_name">Mon prénom</label>
		<input type="text" name="first_name" value="{people[:first_name]}"/>
	</p>
	
	<p class="span-2-last">
		<label for="last_name">Mon nom</label>
		<input type="text" name="last_name" value="{people[:last_name]}"/>
	</p>

	<p class="span-4">
		<label>Mon occupation, ma profession <br />(p.ex. Etudiant UCL/INGI en SINF21, Analyste programmeur chez..., etc.)</label>
		<input type="text" name="occupation" value="{people[:occupation]}"/>
	</p>
	
