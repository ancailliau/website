<div id="main">
  <h2>Modification de votre profil</h2>
  ?{Waw.session_has_key?(:user)}{
    ={AcmScW.database[:people].filter(:mail => '+{Waw.session_get(:user)}').first as people}
    @{/webserv/people/update_account}{
      <div class="feedback"></div>
      <div><<+{account_fields.wbrick with people: people}</div>
      <input type="submit" value="Modifier mon compte"/>
    }
    <script type="text/javascript">
    	$(document).ready(function() {
    	  $("input#account_fields_mail").change(function() {
    	    $('#change_mail_explain').show();
    	  });
      });
    </script>
  }{
    <p>+{messages.user_must_be_logged}</p>
  }
</div>