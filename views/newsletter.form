={controllers.people.newsletter_subscribe as action}{
	<form action="http://acm-sc.us2.list-manage2.com/subscribe/post?u=3805792b689f70381b026bf25&amp;id=9c1c891dc6" 
    method="post" id="newsletter_form" name="mc-embedded-subscribe-form" class="validate form-inline well" target="_blank">
		<label for="mail">Inscrivez-vous à la newsletter&nbsp;:</label>
  	<input type="email" value="john.doe@mail.com" name="EMAIL" class="span3">
		<input type="submit" value="Tenez-moi au courant »" class="btn success"  class="span1" />
  </form>
}
<script type="text/javascript">
	$(document).ready(function(){ 
		$('input[type=text]').focus(function(){ 
			if($(this).val() == $(this).attr('defaultValue')){
				$(this).val('');
			}
		});
		$('input[type=text]').blur(function(){
			if($(this).val() == ''){
				$(this).val($(this).attr('defaultValue'));
			} 
		});
	}); 
</script>
