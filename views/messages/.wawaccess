wawaccess do
  inherits false
  
  matcher :valid_message do
    File.exists?(File.join(wawaccess.root.folder, "#{req_path}.whtml"))
  end
  
  match valid_message do
    source = File.readlines(File.join(wawaccess.root.folder, "#{req_path}.whtml"))
    [200, {'Content-Type' => 'text/html'}, source]
  end

  match true do
    deny
  end
  
end