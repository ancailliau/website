<div class="message logo-message">

  <h3>Entrer une nouvelle commande</h3>

  <p>
  	Veuillez remplir les champs suivants concernant la commande.
  </p>

  ={controllers.event.create as action}{
  	<form action="{action.uri}" method="post" enctype="multipart/form-data" id="{action.id}" class="form-460">
  		<div class="feedback"></div>

      <table class="orders">
        <tr><th>Intitulé</th><th>Taille</th><th>Quantité</th><th>Prix</th></tr>
        <tr>
          <td>T-Shirt</td>
          <td><input type="text" name="shirt_quantity" id="shirt_quantity" value="0" /></td>
	        <td><input type="text" name="shirt_price" id="shirt_price" value="0 euros" disabled /></td>
          <td>
            <select name="sweat_size" id="size">
	            <option>S</option>
	            <option>M</option>
	            <option>L</option>
	            <option>XL</option>
	            <option>XXL</option>
	          </select>
	        </td>
	        <td>Temp</td>
         </tr>
      </table>

  		<p class="form-button">
  			<input type="submit" value="Commander »"/>
  			<a class="button" onclick="hide_popup()">Fermer</a>
  		</p>

  		+{action.ajax_form_preparer}
  	</form>
  }

</div>
