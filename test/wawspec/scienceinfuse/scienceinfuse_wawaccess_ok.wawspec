scenario __FILE__ do
  
  because(".wawaccess is are correctly written") {
    i_reach Waw.config.web_base + 'scienceinfuse'
    i_see "Weekend Festival Scienceinfuse"

    %w{index acces-inscription ateliers spectacle stands}.each {|word|
      i_reach Waw.config.web_base + "scienceinfuse/#{word}"
      i_see "<!-- scienceinfuse-wspec: #{word}.wtpl -->"
    }
  }
  
  because(".wawaccess is secure") {
    i_dont_reach Waw.config.web_base + 'scienceinfuse/.wawaccess'
    i_dont_reach Waw.config.web_base + 'pages/scienceinfuse/.wawaccess'
    i_dont_reach Waw.config.web_base + 'scienceinfuse/layout.wtpl'
    i_dont_reach Waw.config.web_base + 'scienceinfuse/menu.wtpl'
    i_dont_reach Waw.config.web_base + 'pages/scienceinfuse/layout.wtpl'
  }
  
end